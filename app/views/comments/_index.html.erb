<p id="notice"><%= notice %></p>

<h1>Comments</h1>



<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article.comments.each do |comment| %>
      <tr>
        <td><%= comment.user_name %></td>
        <td><%= comment.comment %></td>
       
        <td><%= link_to 'Edit', edit_article_comment_path(comment.article_id,comment) %></td>
        <td><%= link_to 'Destroy', article_comment_path(comment.article.id,comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

